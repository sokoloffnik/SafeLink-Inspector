{
  "manifest_version": 3,
  "name": "SafeLink Inspector",
  "version": "1.2",
  "description": "Автоматически проверяет URL на вирусы через VirusTotal",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon_128.png"
    }
  },
  "icons": {
    "128": "icons/icon_128.png"
  }
}